<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <body>
        <referenceContainer name="content">
            <block class="Superb\Recommend\Block\Slot" name="superbrecommend-homepage-slot-1" after="-">
                <action method="setSlotId">
                    <argument name="slot_id" xsi:type="string">homepage-slot-1</argument>
                </action>
                <action method="setSlotPosition">
                    <argument name="position" xsi:type="string">10</argument>
                </action>
                <action method="setPageType">
                    <argument name="page_type" xsi:type="string">Homepage</argument>
                </action>
                <action method="setPageTypePosition">
                    <argument name="page_type_position" xsi:type="string">10</argument>
                </action>
                <action method="setDefaultPanelId">
                    <argument name="panel_id" xsi:type="string">home-dont-forget-these</argument>
                </action>
            </block>
            <block class="Superb\Recommend\Block\Slot" name="superbrecommend-homepage-slot-2" after="superbrecommend-homepage-slot-1">
                <action method="setSlotId">
                    <argument name="slot_id" xsi:type="string">homepage-slot-2</argument>
                </action>
                <action method="setSlotPosition">
                    <argument name="position" xsi:type="string">20</argument>
                </action>
                <action method="setPageType">
                    <argument name="page_type" xsi:type="string">Homepage</argument>
                </action>
                <action method="setPageTypePosition">
                    <argument name="page_type_position" xsi:type="string">10</argument>
                </action>
                <action method="setDefaultPanelId">
                    <argument name="panel_id" xsi:type="string">home-most-popular</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
