<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <superbrecommend>
            <general_settings>
                <server_url>http://tracking.recommend.pro/</server_url>
                <server_secure_url>https://tracking.recommend.pro/</server_secure_url>
                <api_url>https://api.recommend.pro/</api_url>
                <advanced>0</advanced>
            </general_settings>
            <panels>
                <media_thumb_source>small_image</media_thumb_source>
                <media_thumb_width>240</media_thumb_width>
                <media_thumb_height>300</media_thumb_height>
            </panels>
            <status_cron>
                <enabled>1</enabled>
                <frequency>every5minutes</frequency>
            </status_cron>
            <data_cron>
                <enabled>1</enabled>
                <frequency>daily</frequency>
            </data_cron>
        </superbrecommend>
    </default>
</config>
